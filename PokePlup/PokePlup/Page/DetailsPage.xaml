<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokePlup.Page.DetailsPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Retour" Clicked="Return"/>
            <Label Text="{Binding Nom}"
                   HorizontalTextAlignment="Center"
                   FontSize="50"
                   Margin="30, 10, 30, 10"/>
            
            <Image Source="{Binding image}"
                   WidthRequest="200"
                   HeightRequest="200"/>
            
            <FlexLayout JustifyContent="SpaceEvenly"
                        Margin="10, 20, 10, 20">
                <Label Text="{Binding Type}" HorizontalTextAlignment="Center"/>
                <Label Text="{Binding Type2}" HorizontalTextAlignment="Center"/>
            </FlexLayout>
            

            <Label Text="{Binding Description}"
                   HorizontalTextAlignment="Center"
                   Margin="30, 20, 20, 20"
                   FontSize="16"/>

            <Label Text="{Binding HP}"  
                   HorizontalTextAlignment="Center" 
                   Margin="10, 0, 10, 0"/>
            
            <FlexLayout JustifyContent="SpaceAround"
                        Margin="10, 20, 10, 20">
                <Label Text="{Binding ATK}"/>
                <Label Text="{Binding DEF}"/>
            </FlexLayout>

            <FlexLayout JustifyContent="SpaceAround"
                        Margin="10, 20, 10, 20">
                <Label Text="{Binding SDEF}"/>
                <Label Text="{Binding SATK}"/>
            </FlexLayout>


        </StackLayout>
        
        
    </ContentPage.Content>
</ContentPage>