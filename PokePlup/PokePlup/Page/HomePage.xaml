             x:Class="PokePiplup.Page.HomePage"
             BackgroundImageSource="wallpaper.jpg">
	<ContentPage.Content>
        <FlexLayout Direction="Column"
                    Margin="50, 50, 50, 0">
            <Label Text="POKE PLUP"
                   FontSize="55"
                   HorizontalTextAlignment="Center"
                   TextColor="Cyan"/>
            <Image Source="piplup.png"
                   Margin="0,70,0,70"/>
