        <FlexLayout Direction="Column"
                    Margin="30, 80, 30, 0">
            <Label Text="POKE PLUP"
                   FontSize="55"
                   HorizontalTextAlignment="Center"
                   FontAttributes="Bold"
                   TextColor="White"/>
