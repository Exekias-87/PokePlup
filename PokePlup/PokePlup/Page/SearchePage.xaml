<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokePlup.Page.SearchePage"
             BackgroundColor="#403f3e">
    <ContentPage.Content>
        
      <StackLayout>
            <Frame CornerRadius="30" BackgroundColor="#bf8a3d" Margin="20" Padding="15">
                <Entry x:Name="searchBar" Text="" Placeholder="Faites votre recherche"/>
            </Frame>
            <Button Text="Rechercher" 
                    BackgroundColor="#bf8a3d" 
                    Padding="6" 
                    CornerRadius="40" 
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    Clicked="Rechercher"/>

            <Label Text="Résultat" HorizontalOptions="Center" FontSize="25" Margin="0,50,0,0" TextColor="White" FontAttributes="Bold"/>
            <Label HorizontalOptions="Center" x:Name="NamePoke" FontSize="20" Margin="0,50,0,0" TextColor="White"/>
            <Image x:Name="ImagePoke"/>
        </StackLayout>
        
  </ContentPage.Content>
</ContentPage>